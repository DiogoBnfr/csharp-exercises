<Window x:Class="ex006_wpf_moving_square.MovingSquare" x:Name="Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Moving Square App" Height="450" Width="800" Loaded="MainWindow_OnLoaded"
        MaxHeight="450" MaxWidth="800">
    <Canvas Background="Black" x:Name="MyCanvas" Focusable="True" KeyDown="OnKeyDown">
        <Rectangle x:Name="Square" Width="100" Height="100" Fill="Red" Canvas.Top="300" Canvas.Left="350"></Rectangle>
    </Canvas>
</Window> 
