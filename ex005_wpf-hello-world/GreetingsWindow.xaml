<Window x:Class="ex005_wpf_hello_world.GreetingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="50, 100">
            <TextBlock TextAlignment="Center" FontSize="30">Hello World!</TextBlock>
            <RadioButton x:Name="HelloRadioButton" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="100, 0, 0, 50">Hello</RadioButton>
            <RadioButton x:Name="GoodbyeRadioButton" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 0, 100, 50">Goodbye</RadioButton>
            <Button Height="80" Width="200" Margin="0, 120, 0, 0" FontSize="30" Click="Button_Click">Click me!</Button>
        </Grid>
    </Grid>
</Window>